{% extends 'base-admin.html.twig' %}

{% block title %}All Categories
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ label }} text-center my-3">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}

				<h1 class="page-header my-3 text-center">List of Categories</h1>
				<a href="{{ path('app_admin_add_update_category') }}" class="btn btn-success btn-sm mb-3 float-end">Add Category</a>
				<table class="table table-bordered table-striped table-hover">
					<thead>
						<tr>
							<th>ID</th>
							<th>Title</th>
							<th>Description</th>
							<th>Edit</th>
							<th>Delete</th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
						<tr>
							<td>{{ category.id }}</td>
							<td>{{ category.title }}</td>
							<td>{{ category.description }}</td>
							<td>
								<a href="{{ path('app_admin_add_update_category', {id: category.id}) }}" class="btn btn-info btn-sm">Edit</a>
							</td>
							<td>
								<a href="{{ path('app_admin_delete_category', {id: category.id}) }}" class="btn btn-danger btn-sm">Delete</a>
							</td>
						</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
